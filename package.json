{
  "name": "pevara.github.io",
  "version": "1.0.0",
  "description": "",
  "main": "docs/index.html",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "npm run css",
    "css-compile": "sass --style compressed --source-map --embed-sources --no-error-css --load-path=node_modules styles/:docs/",
    "css-lint": "stylelint styles/",
    "css-prefix": "postcss --replace docs/styles.css --use autoprefixer --map",
    "css": "npm-run-all css-compile css-prefix",
    "server": "sirv --dev --no-clear --port 3000",
    "start": "npm-run-all --parallel watch server",
    "watch": "nodemon -e html,scss -x \"npm run css\"",
    "test": "npm-run-all css-lint css"
  },
  "dependencies": {
    "@popperjs/core": "^2.11.8",
    "bootstrap": "^5.3.3"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.19",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.39",
    "postcss-cli": "^11.0.0",
    "sass": "^1.77.6",
    "sirv-cli": "^2.0.2",
    "stylelint": "^16.6.1",
    "stylelint-config-twbs-bootstrap": "^14.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pevara/pevara.github.io.git"
  },
  "author": "Pevara",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pevara/pevara.github.io/issues"
  },
  "homepage": "https://github.com/pevara/pevara.github.io#readme"
}
