{
    "name": "tfb",
    "version": "0.0.1",
    "description": "A set of practical tools and calculators for people that like to build stuff.",
    "productName": "Tools for Builders",
    "author": "Pevara",
    "private": true,
    "scripts": {
        "lint": "eslint --ext .js,.ts,.vue ./",
        "format": "prettier --write \"**/*.{js,ts,vue,scss,html,md,json}\" --ignore-path .gitignore",
        "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
        "dev": "quasar dev",
        "build": "quasar build",
        "test:unit:ui": "majestic",
        "test:unit": "jest",
        "test:unit:ci": "jest --ci",
        "test:unit:coverage": "jest --coverage",
        "test:unit:watch": "jest --watch",
        "test:unit:watchAll": "jest --watchAll",
        "test:e2e": "cross-env NODE_ENV=test start-test \"quasar dev\" http-get://localhost:9000 \"cypress open --e2e\"",
        "test:e2e:ci": "cross-env NODE_ENV=test start-test \"quasar dev\" http-get://localhost:9000 \"cypress run --e2e\"",
        "test:component": "cross-env NODE_ENV=test cypress open --component",
        "test:component:ci": "cross-env NODE_ENV=test cypress run --component"
    },
    "dependencies": {
        "@quasar/extras": "^1.16.4",
        "pinia": "^2.0.11",
        "pinia-plugin-persistedstate": "^3.2.1",
        "quasar": "^2.16.0",
        "quasar-extras-svg-icons": "^1.37.0",
        "vue": "^3.4.18",
        "vue-i18n": "^9.2.2",
        "vue-router": "^4.0.12"
    },
    "devDependencies": {
        "@intlify/vite-plugin-vue-i18n": "^3.3.1",
        "@intlify/vue-i18n-loader": "^4.2.0",
        "@quasar/app": "^3.3.2",
        "@quasar/app-vite": "^1.9.0",
        "@quasar/app-webpack": "^3.13.4",
        "@quasar/quasar-app-extension-testing-e2e-cypress": "^6.1.0",
        "@quasar/quasar-app-extension-testing-unit-jest": "^3.0.2",
        "@types/node": "^12.20.21",
        "@typescript-eslint/eslint-plugin": "^7.16.0",
        "@typescript-eslint/parser": "^7.16.0",
        "@vue/test-utils": "^2.4.6",
        "autoprefixer": "^10.4.2",
        "cypress": "^13.6.6",
        "cypress-vite": "^1.5.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-cypress": "^2.15.1",
        "eslint-plugin-jest": "^28.6.0",
        "eslint-plugin-vue": "^9.0.0",
        "jest": "^29.7.0",
        "prettier": "^2.5.1",
        "typescript": "~5.5.4",
        "vite-plugin-checker": "^0.7.2",
        "vue-tsc": "^2.0.29"
    },
    "engines": {
        "node": "^20 || ^18 || ^16",
        "npm": ">= 6.13.4",
        "yarn": ">= 1.21.1"
    }
}
